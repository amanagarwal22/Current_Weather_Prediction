<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../css/index.css">
    <title>Weather Prediction</title>
    <script type = "text/JavaScript" src = "https://MomentJS.com/downloads/moment.js"></script>
</head>
<body>

<% if (error !== ''){ %>
    <h1 style="color: red"><%= error %></h1>
<% } if (data === ''){ %>
    <div id="fetch">
        <!-- <header>
            <input type="text" autocomplete="off" class="search-box" placeholder="Search For City..">
        </header> -->
        <div class="main">
            <section class="location">
              <h1>Weather Prediction</h1>
              <p>View the current weather of your city</p>
                <form class="" action="/" method="post">
                    <header>
                        <input type="text" class="search-box" autocomplete="off" name="cityName"
                               placeholder="Search for a city...">
                    </header>

                    <!-- <div class="city view">
                        Northampton,GB
                    </div> -->
                     <input class="button" type="submit" value="Search" />
                </form>
            </section>
        </div>
    </div>
<% } else { %>
    <div id="app-wrap">
        <div class="main">
          <form class="" action="/" method="post">
            <header>
                <input type="text" class="search-box" autocomplete="off" name="cityName"
                       placeholder="Search for a city...">
            </header>
            <div class="city_view"><%= data.name %></div>
            <div style = "font-size:25px" id = "todaysdate"></div>

            <div class="current">
                <div class="temp1">
                    <%= data.main.temp %> <span>° C</span>
                </div>
                <div class="weather">
                    <%= data.weather[0].description %>
                </div>
                <div class="hi-low">
                    <%= data.main.temp_min %> °c/ <%= data.main.temp_max %> °c
                </div>
            </div>

          </form>

        </div>
    </div>
<% } %>
<script type = "text/JavaScript">
   var a = moment().format('MMMM Do YYYY').toString();
   document.getElementById("todaysdate").innerHTML = a;

   if(data.main.temp>18){
       document.getElementById("app-wrap").className="summer";
     }
</script>


</body>
</html>
